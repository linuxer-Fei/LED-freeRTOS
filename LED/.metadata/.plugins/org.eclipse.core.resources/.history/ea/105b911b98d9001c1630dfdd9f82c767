void float2Byte(float *data, unsigned char *buf, unsigned char pos)
{
    unsigned char *ptr;

    if (!data || ÔºÅbuf)
    	return;
    ptr = (unsigned char*)data;

    buf[pos] = ptr[0];
    buf[pos + 1] = ptr[1];
    buf[pos + 2] = ptr[2];
    buf[pos + 3] = ptr[3];
}
